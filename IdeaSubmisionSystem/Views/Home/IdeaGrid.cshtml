@using IdeaSubmisionSystem.Application.Contracts.Dtos
@model PaginatedList<IdeaDto>

<div class="card">
    <div class="card-header">
        <h2>Ideas</h2>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Message</th>
                    <th>Category</th>
                    <th>Email</th>
                    <th>Submission Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var idea in Model.Items)
                {
                    <tr>
                        <td>@idea.Title</td>
                        <td>@idea.Message</td>
                        <td>@idea.Category</td>
                        <td>@idea.Email</td>
                        <td>@idea.SubmissionDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="IdeaGrid" asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="IdeaGrid" asp-route-pageIndex="@i">@i</a>
                    </li>
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="IdeaGrid" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>